<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TFG Chess - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/global.css" />
    @await RenderSectionAsync("Stylesheets", required: false)
    <script src="https://kit.fontawesome.com/0f96db56df.js" crossorigin="anonymous"></script>
</head>
<body asp-active-controller-action="Account:LogIn SignUp" asp-active-class-add="login-background">
    <header>
        <partial name="Navbar/_Navbar" />
    </header>
    <div class="container-fluid">
            @RenderBody()
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
