@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Play offline"];
}
@section Stylesheets
{
    <link rel="stylesheet" href="~/css/chessboard.css" />
    <link rel="stylesheet" href="~/lib/cm-chessboard-master/assets/extensions/markers/markers.css" />
    <link rel="stylesheet" href="~/lib/cm-chessboard-master/assets/extensions/promotion-dialog/promotion-dialog.css" />
}
<div class="row justify-content-center" style="background-color:#302e2b">
    <div id="colBoardContainer" class="col-auto ps-4 pe-4 pe-lg-0 align-items-center d-flex">
        <div id="boardContainer" class="mx-auto w-100">
            <div id="auxDiv"></div>
            <!--OPPONENT CONTAINER-->
            <div id="opponentInfo" class="pt-2 pb-2">
                <div class="p-2 fw-semibold d-flex gap-2 align-items-center rounded" style="background-color:#525c66">
                    <div class="rounded rounded bg-success border border-white border-2" style="width:35px; height:35px;">
                        <img src="~/assets/img/stockfish.svg" class="img-fluid"/>
                    </div>
                    <span class="text-white">STOCKFISH ENGINE</span>
                </div>

            </div>

            <!--BOARD CONTAINER-->
            <div id="board" class="shadow-lg"></div>

            <!--USER CONTAINER-->
            <div id="userInfo" class="pt-2 pb-2">
                <div class="p-2 fw-semibold d-flex gap-2 align-items-center rounded" style="background-color:#525c66">
                    <div class="rounded rounded bg-info border border-white border-2" style="width:35px; height:35px;">
                        <img src="~/assets/img/user.png" class="img-fluid" />
                    </div>
                    <span asp-authenticated="false" class="text-white">GUEST</span>
                    <span asp-authenticated="true" class="text-white">@Context.User?.Identity?.Name</span>

                </div>

            </div>

        </div>
    </div>
    <div class="col-sm-12 col-lg-3" style="background-color:#302e2b">
        <div id="boardSideBar" class="p-2">
            <div class="d-flex flex-column h-100 rounded p-4" style="background-color:#45423e">
                <div id="playerPieceTeamConfig" class="d-flex gap-2 h-100">
                    <input type="radio" class="btn-check" name="colorOptions" id="white" autocomplete="off" checked>
                    <label class="btn btn-light w-100 mb-auto" for="white">WHITE</label>

                    <input type="radio" class="btn-check" name="colorOptions" id="black" autocomplete="off">
                    <label class="btn btn-dark w-100 mb-auto" for="black">BLACK</label>
                </div>

                <button id="startAIGame" class="btn btn-lg btn-success w-100 align-self-end fw-bolder rounded-pill">START GAME</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="endGameModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered text-white">
        <div class="modal-content border border-2 border-success bg-dark">
            <div class="modal-header border-0">
                <h1 class="modal-title fs-2" id="endGameTitle"></h1>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div id="endGameBody" class="modal-body fs-4 border-success">
            </div>
            <div class="modal-footer d-flex justify-content-center border-success border-2">
                <button type="button" class="btn btn-success rounded-pill">Rematch</button>
                <button type="button" class="btn btn-primary rounded-pill" data-bs-dismiss="modal">New game</button>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="module" src="https://cdn.jsdelivr.net/npm/cm-chessboard@8/src/Chessboard.js"></script>
    <script type="module" src="~/js/offline.js"></script>
}
