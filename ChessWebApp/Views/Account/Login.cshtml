@inject IViewLocalizer Localizer
@model ChessWebApp.Models.ViewModels.LogInVM
@{
    ViewData["Title"] = Localizer["Log In"];
}
@section Stylesheets
{
    <link rel="stylesheet" href="~/css/login-signup.css" />
}
<div class="row p-4 min-vh-100 d-flex flex-column justify-content-center align-items-center">
    <div class="col-10 col-md-8 col-lg-6 col-xl-5 d-flex flex-column text-white bg-black p-4 rounded">
        <div class="d-flex justify-content-center mb-4 mt-2">
            <a asp-action="Index" asp-controller="Home"> <img src="~/assets/img/template.webp" height="80px" width="80px" /></a>
        </div>
        <form method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-primary"></div>
            <div class="input-group mb-3">
                <label asp-for="Email" class="input-group-text"><i class="fa-solid fa-envelope"></i></label>
                <input asp-for="Email" class="form-control invalid">
            </div>
            <span asp-validation-for="Email" class="invalid-feedback">
                
            </span>
            <div class="input-group mb-3">
                <label asp-for="Password" class="input-group-text"><i class="fa-solid fa-lock"></i></label>
                <input asp-for="Password" class="form-control">
                <button onclick="togglePasswordVisibility()" class="btn btn-outline-secondary" type="button"><i class="fa-solid fa-eye"></i></button>
            </div>
            <span asp-validation-for="Password" class="invalid-feedback">
                
            </span>
            <div class="d-flex justify-content-between">
                <div class="form-check">
                    <label asp-for="RememberMe" class="form-check-label">
                        Remember me?
                    </label>
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox">
                </div>
                <a class="text-info">@Localizer["Forgot password?"]</a>
            </div>
            <button class="btn btn-lg btn-outline-success w-100 mt-4" type="submit">Log In</button>
            <div class="d-flex justify-content-center align-items-center gap-2 mt-4 mb-4">
                <span class="border border-1 border-white flex-grow-1"></span>
                <span>@Localizer["OR"]</span>
                <span class="border border-1 border-white flex-grow-1"></span>
            </div>
        </form>
        <div class="d-flex gap-2 flex-column">
            <button class="btn btn-outline-info">OAuth</button>
            <button class="btn btn-outline-info">OAuth</button>
            <button class="btn btn-outline-info">OAuth</button>
        </div>
        <div class="d-flex justify-content-center mt-4">
            <span class="me-2">@Localizer["Don't have an account?"]</span>
            <a asp-action="SignUp" asp-controller="Account" class="text-success ms-1">@Localizer["Sign Up"]</a>
        </div>
    </div>
</div>

@section Scripts
{
    // Add this script to enable Bootstrap validation styling
    <script>
        (function () {
            'use strict';

            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');

                Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}


